<resources>

    <style name="BaseAppTheme" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="colorBackgroundFloating">@color/sheetColor</item>
        <item name="android:textColorHint">@color/secondaryTextColor</item>
        <item name="colorError">@color/errorColor</item>
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="materialCardViewStyle">@style/AppCardView</item>

        <item name="android:windowContentOverlay">@null</item>

    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseAppTheme"></style>
    <style name="AppTheme.Plan" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/primaryColor1</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor1</item>
        <item name="colorSecondary">@color/secondaryColor1</item>
        <item name="colorAccent">@color/secondaryColor1</item>
    </style>
    <style name="AppTheme.Plate" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/primaryColor2</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor2</item>
        <item name="colorSecondary">@color/secondaryColor2</item>
        <item name="colorAccent">@color/secondaryColor2</item>
    </style>
    <style name="AppTheme.Recipe" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/primaryColor3</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor3</item>
        <item name="colorSecondary">@color/secondaryColor3</item>
        <item name="colorAccent">@color/secondaryColor3</item>
    </style>
    <style name="AppTheme.Food" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/primaryColor4</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor4</item>
        <item name="colorSecondary">@color/secondaryColor4</item>
        <item name="colorAccent">@color/secondaryColor4</item>
    </style>
    <style name="AppTheme.Showcase" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/primaryColor5</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor5</item>
        <item name="colorSecondary">@color/secondaryColor5</item>
        <item name="colorAccent">@color/secondaryColor5</item>
        <item name="colorBackgroundFloating">?attr/colorPrimary</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">

    </style>

    <style name="Component.Dark" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="colorBackgroundFloating">?attr/colorPrimary</item>
        <item name="android:windowBackground">?attr/colorPrimary</item>
        <item name="android:colorBackground">?attr/colorError</item>
    </style>
    <style name="Component.Light" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorBackgroundFloating">@color/surfaceColor</item>
    </style>
    <style name="Surface" parent="Component.Light"></style>
    <style name="Surface.Pop" parent="Component.Dark"></style>

    <style name="Sheet" parent="Component.Light">
        <item name="colorBackgroundFloating">@color/sheetColor</item>
    </style>

    <style name="Sheet.Pop" parent="Component.Dark">
        <item name="colorBackgroundFloating">@color/sheetColor</item>
    </style>

    <style name="AppCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">8dp</item>
    </style>
    <attr format="reference" name="cardStyle"/>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/secondaryColor</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="TitleStyle">
        <item name="android:fontFamily">@font/dancing_script_family</item>
    </style>
</resources>
