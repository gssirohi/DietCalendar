<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
xmlns:tools="http://schemas.android.com/tools"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:paddingTop="10dp"
android:paddingBottom="10dp"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto">
<com.google.android.material.card.MaterialCardView
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    card_view:contentPadding="0dp"
    android:theme="@style/Surface"
    style="?attr/materialCardViewStyle"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <com.techticz.app.ui.customView.AppImageView
            android:id="@+id/aiv_plate"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/bg_afternoon"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "Plan Name"
            android:id="@+id/tv_plate_name"
            android:layout_margin="4dp"
            style="?attr/textAppearanceSubtitle2"
            android:maxLines="2"
            android:minLines="2"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/plan_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "\u25D9"
                android:gravity="center"
                style="?attr/textAppearanceSubtitle2"
                />
            <TextView
                android:id="@+id/tv_plate_cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text = "2500 Kcal Daily"
                android:layout_marginLeft="4dp"
                android:maxLines="1"
                android:minLines="1"
                style="?attr/textAppearanceCaption"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_plate_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "This is plan description. Here we should describe all features of this plan"
            android:padding="4dp"
            android:maxLines="2"
            android:minLines="2"
            android:visibility="gone"
            style="?attr/textAppearanceBody2"
            android:textSize="8sp"
            />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>