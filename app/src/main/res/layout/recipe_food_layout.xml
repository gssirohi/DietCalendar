<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:orientation="horizontal">
    <com.github.ybq.android.spinkit.SpinKitView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/spin_kit"
        style="@style/SpinKitView.Small.MultiplePulse"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:SpinKit_Color="@color/secondaryColor" />
    <TextView
        android:id="@+id/tv_food_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:maxLines="1"
        style="?attr/textAppearanceBody2"
        android:text="\u25D9"
        android:textColor="@android:color/holo_green_dark"
        android:visibility="visible"
        tools:visibility="visible"/>
    <TextView
        android:layout_weight="2"
        android:id="@+id/tv_food_name"
        android:layout_width="0dp"
        style="?attr/textAppearanceBody2"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        tools:text="This is Food Name"
        android:maxLines="2"
        android:visibility="invisible"
        tools:visibility="visible"/>
    <TextView
        android:layout_weight="1"
        android:id="@+id/tv_food_qty"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_gravity="center"
        style="?attr/textAppearanceBody2"
        android:maxLines="2"
        android:layout_height="wrap_content"
        tools:text="2\n table spoon"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="right"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_food_calory"
            android:layout_gravity="center|right"
            style="?attr/textAppearanceBody2"
            android:textSize="12sp"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1150 KCAL"/>
        <TextView
            android:id="@+id/tv_food_calory_per"
            android:layout_gravity="center|right"
            style="?attr/textAppearanceBody2"
            android:textSize="10sp"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="per 200 gram"/>
    </LinearLayout>

</LinearLayout>