<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    >
    <com.google.android.material.card.MaterialCardView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        style="@style/AppCardView"
        app:cardCornerRadius="12dp"
        app:cardUseCompatPadding="true"
        android:theme="@style/Component.Dark"
        app:cardElevation="8dp"
        android:elevation="10dp"
        android:layout_gravity="center_horizontal|top"
        app:cardBackgroundColor="?attr/colorPrimary"
        >
        <TextView
            android:id="@+id/tv_meal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            style="?attr/textAppearanceSubtitle1"
            tools:text="Early Morning"/>
    </com.google.android.material.card.MaterialCardView>
<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/Component.Dark"
    app:cardBackgroundColor="@color/primaryDarkColor2"
    app:contentPadding="0dp"
    app:cardElevation="6dp"
    android:layout_marginTop="24dp"

    android:layout_gravity="center_horizontal|bottom"
    >
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/rl_plate_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="148dp"
    android:orientation="vertical">
    <!--<include layout="@layout/plate_layout"/>-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_plate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        app:fabCustomSize="28dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_action_add"
        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>


  </com.google.android.material.card.MaterialCardView>

</FrameLayout>