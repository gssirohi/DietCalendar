<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_meal_plate_id"
            android:layout_width="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            style="@style/Text.Dark"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:text="Meal Plate ID"/>

        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_meal_plate_name"
            android:layout_width="wrap_content"
            android:gravity="left"
            style="@style/Text.Dark"
            android:layout_gravity="left"
            android:layout_height="wrap_content"
            android:text="My Meal Plate"
            android:visibility="invisible"
            tools:visibility="visible"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_meal_plate_type"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            style="@style/Text.Dark"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            tools:visibility="visible"
            android:text="Veg"/>

        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_meal_plate_calories"
            android:layout_width="wrap_content"
            android:gravity="right"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            style="@style/Text.Dark"
            android:text="120 Kcal"
            android:visibility="invisible"
            tools:visibility="visible"/>

    </LinearLayout>
</LinearLayout>