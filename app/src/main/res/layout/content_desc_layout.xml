<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<com.github.ybq.android.spinkit.SpinKitView
android:layout_weight="1"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/spin_kit_content_analysis"
style="@style/SpinKitView.Small.Wave"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_gravity="center"
tools:visibility="visible"
android:visibility="invisible"
app:SpinKit_Color="@color/secondaryColor" />
<LinearLayout android:id="@+id/ll_content_desc_header"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="@color/translucent"
    android:orientation="horizontal"
    android:showDividers="middle"
>

    <TextView
        android:layout_weight="1"
        android:id="@+id/tv_veg_nonveg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:layout_gravity="center"
        android:gravity="center|left"
        android:maxLines="1"
        style="?attr/textAppearanceHeadline5"
        android:text="\u25D9"
        tools:text="ðŸ”¥"
        android:textColor="@android:color/holo_green_dark"
        android:visibility="visible"
        tools:visibility="visible"/>
    <TextView

        android:id="@+id/tv_recipe_serving"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_gravity="center"

        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        style="?attr/textAppearanceSubtitle1"
        tools:text="2 Bowl"
        android:text="1 Plate"
        android:visibility="visible"
        tools:visibility="visible"/>
    <TextView
        android:layout_weight="1"
        android:id="@+id/tv_content_calories"
        android:layout_width="wrap_content"
        android:gravity="right"
        android:layout_gravity="right|center"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        style="?attr/textAppearanceHeadline6"
        tools:text="1207364 Cals"
        android:visibility="invisible"
        tools:visibility="visible"/>
</LinearLayout>
</FrameLayout>