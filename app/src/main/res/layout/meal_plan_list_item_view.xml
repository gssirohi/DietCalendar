<androidx.coordinatorlayout.widget.CoordinatorLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<com.google.android.material.card.MaterialCardView
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    card_view:contentPadding="0dp"
    android:theme="@style/Component.Dark"
    style="?attr/materialCardViewStyle"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <com.techticz.app.ui.customView.AppImageView
        android:id="@+id/aiv_plan_image"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/bg_afternoon"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "Plan Name"
        android:id="@+id/plan_name"
        android:layout_margin="4dp"
        style="?attr/textAppearanceSubtitle1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/plan_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "\u25D9"
            android:gravity="center"
            style="?attr/textAppearanceBody2"
            />
        <TextView
            android:id="@+id/plan_verified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text = "Includes Cheese"
            android:layout_marginLeft="4dp"
            style="?attr/textAppearanceCaption"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/plan_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "This is plan description. Here we should describe all features of this plan"
        android:padding="4dp"
        android:maxLines="2"
        android:minLines="2"
        style="?attr/textAppearanceBody2"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/plan_access"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Free"
            android:gravity="start|center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_weight="8"
            style="?attr/textAppearanceHeadline5"
            />
        <TextView
            android:id="@+id/tv_daily_cal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "2500 Kcal Daily"
            android:gravity="start|center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_weight="8"
            style="?attr/textAppearanceCaption"
            />
    </LinearLayout>
</LinearLayout>
</com.google.android.material.card.MaterialCardView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/b_explore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        app:layout_anchor="@id/aiv_plan_image"
        app:fabCustomSize="28dp"
        app:layout_anchorGravity="bottom|end"
        app:srcCompat="@drawable/ic_action_process_start"
        />
</androidx.coordinatorlayout.widget.CoordinatorLayout>