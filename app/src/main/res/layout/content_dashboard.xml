<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_anchor="@id/app_bar"
    app:layout_anchorGravity="bottom|end"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:behavior_overlapTop ="220dp"
    android:layout_marginTop="148dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.techticz.app.ui.activity.DashboardActivity"
    tools:showIn="@layout/app_bar_dashboard"
    >

    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            style="@style/AppCardView"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Water Glass"
                    style="@style/Title"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:src="@drawable/full_glass"/>
                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:src="@drawable/full_glass"/>
                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:src="@drawable/empty_glass"/>
                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:src="@drawable/empty_glass"/>
                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:src="@drawable/empty_glass"/>
                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:src="@drawable/empty_glass"/>
                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:src="@drawable/empty_glass"/>
                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:src="@drawable/empty_glass"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            style="@style/AppCardView"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fruits and Veggies in Today Meals"
                style="@style/Title"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <com.techticz.powerkit.customview.CircleGraphView
                    android:id="@+id/cgv_veggies"
                    android:layout_width="120dp"
                    android:layout_weight="1"
                    android:layout_height="120dp">

                </com.techticz.powerkit.customview.CircleGraphView>
                <com.techticz.powerkit.customview.CircleGraphView
                    android:id="@+id/cgv_fruits"
                    android:layout_width="120dp"
                    android:layout_weight="1"
                    android:layout_height="120dp">

                </com.techticz.powerkit.customview.CircleGraphView>
            </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            style="@style/AppCardView"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is content of dashboard"
                android:textColor="@color/onSecondary"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
