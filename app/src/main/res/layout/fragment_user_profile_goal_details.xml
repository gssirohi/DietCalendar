<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_user_basic"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context="com.techticz.app.ui.activity.UserProfileActivity$PlaceholderFragment">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:elevation="10dp"
            android:layout_gravity="center_horizontal|bottom"
            android:theme="@style/Surface">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BMI"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        style="?attr/textAppearanceSubtitle1"
        android:textAllCaps="true" android:textStyle = "bold" />
    <TextView
        android:id="@+id/tv_bmi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="21.5"
        android:text="26.5"
        android:layout_margin="16dp"
        android:layout_gravity="center"
        android:gravity="center"
        style="?attr/textAppearanceHeadline2"
        android:textAllCaps="true" android:textStyle = "bold" />

    <TextView
        android:id="@+id/tv_weight_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="You are overweight"
        android:text="You are overweight"
        android:layout_gravity="center"
        android:gravity="center"
        style="?attr/textAppearanceCaption"
        android:textAllCaps="true" android:textStyle = "bold" />
    <TextView
        android:id="@+id/tv_weight_recommendation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        tools:text="Recommendation: 72 Kg is the ideal wait for you."
        android:fontFamily="@font/lobster_two_italic"
        android:text="Recommendation: 72 Kg is the ideal wait for you."
        android:layout_margin="8dp"
        android:layout_gravity="center"
        android:gravity="center"

        />
</LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_gravity="center_horizontal|top"

        android:theme="@style/Surface">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GOAL"
                android:layout_margin="8dp"
                style="?attr/textAppearanceSubtitle1"
                android:textAllCaps="true" android:textStyle = "bold" />
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/radio_group_goal"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                android:drawableTint="?attr/colorAccent"
                android:orientation="horizontal"
                >
                <com.google.android.material.chip.Chip
                    android:id="@+id/rb_gain_weight"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="16dp"
                    android:checkable="true"
                    app:chipBackgroundColor="?attr/colorAccent"
                    android:layout_height="wrap_content"
                    android:text="GAIN WEIGHT"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/rb_lose_weight"
                    android:layout_weight="1"
                    android:layout_marginLeft="16dp"
                    android:checkable="true"
                    app:chipBackgroundColor="?attr/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LOSE WEIGHT"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/rb_energetic"
                    android:layout_weight="1"
                    android:layout_marginLeft="16dp"
                    android:checkable="true"
                    app:chipBackgroundColor="?attr/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STAY ENERGETIC"/>
            </com.google.android.material.chip.ChipGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/translucent"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@color/black_overlay"
                android:padding="8dp">
                <TextView
                    android:id="@+id/tv_daily_maintain_calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="2000 KCAL"
                    android:textStyle="bold"
                    style="?attr/textAppearanceHeadline6"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Daily Calories to maintain weight"
                    style="?attr/textAppearanceCaption"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_target_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:visibility="visible"
                android:visibility="visible"
                android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TARGET WEIGHT"
                android:layout_margin="8dp"
                style="?attr/textAppearanceSubtitle1"
                android:textAllCaps="true" android:textStyle = "bold" />
            <TextView
                android:id="@+id/tv_target_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="75 Kgs"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                style="?attr/textAppearanceHeadline5"
                android:textStyle = "bold" />

            <SeekBar
                android:id="@+id/sb_target_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="96"
                android:min="1"
                android:layout_margin="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DURATION"
                android:layout_margin="8dp"
                android:paddingTop="24dp"
                style="?attr/textAppearanceSubtitle1"
                android:textAllCaps="true" android:textStyle = "bold" />
            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 weeks"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                style="?attr/textAppearanceHeadline5"
                android:textStyle = "bold" />

            <SeekBar
                android:id="@+id/sb_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="48"
                android:min="1"
                android:layout_margin="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@color/black_overlay"
                android:padding="8dp">
                <TextView
                    android:id="@+id/tv_daily_required_calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="2400 KCAL"
                    android:textStyle="bold"
                    style="?attr/textAppearanceHeadline4"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Daily Calories to achieve target"
                    style="?attr/textAppearanceCaption"/>
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin" />
</LinearLayout>
</androidx.core.widget.NestedScrollView>