<resources>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme">
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_right</item>
        <item name="android:windowExitTransition">@android:transition/slide_left</item>

        <item name="android:textColorPrimary">@color/onPrimary</item>
        <item name="android:textColorSecondary">@color/onSecondary</item>

    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/secondaryColor</item>
        <item name="android:textColor">@color/onSecondary</item>
    </style>
</resources>
